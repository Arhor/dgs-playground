scalar Long
scalar Settings

type Query {
    user(username: String): UserDto
    users: [UserDto]
}

type Mutation {
    createUser(username: String, settings: Settings): UserDto
    createPost(userId: Long, content: String): PostDto
}

type UserDto {
    id: Long
    username: String
    settings: Settings
    posts: [PostDto]
}

type PostDto {
    id: Long
    userId: Long
    content: String
}
